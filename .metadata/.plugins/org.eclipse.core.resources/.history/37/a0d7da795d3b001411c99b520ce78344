#include <iostream>
#include <vector>
#include <cmath>

using namespace std;

void micev1Util(){

	long int n;
	cin>>n;
	vector<int> mouse(n);
	vector<int> hole(n);
	for(long int i=0;i<n;i++){
		long int x;
		cin>>x;
		mouse.push_back(x);
	}
	for(long int i=0;i<n;i++){
			long int x;
			cin>>x;
			hole.push_back(x);
		}
	sort(mouse.begin(),mouse.end());
	sort(hole.begin(),hole.end());

	long int max=0;
	for(long int i=0;i<n;i++){
		if(max<abs(mouse.at(i)-hole.at(i)))
			max=abs(mouse.at(i)-hole.at(i));
	}
	printf("%ld",max);
}

void micev1(){
	int t;
	cin>>t;
	for(int i=0;i<t;i++)
		micev1Util();

	return;
}

int main(){micev1();return 0;}
